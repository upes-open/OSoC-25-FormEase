{
  "manifest_version": 3,
  "name": "FormEase",
  "version": "1.0",
  "description": "Resize, compress, and convert files before uploading, directly in-browser.",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": "icons/logo.png",
    "default_title": "FormEase"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "toolbox.html",
        "styles.css",
        "content.js",
        "scripts/pica.min.js",
        "scripts/resize.js",
        "scripts/compress.js",
        "scripts/convert.js",
        "scripts/ffmpeg.min.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}